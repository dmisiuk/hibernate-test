<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.minsler.hibernate.bean.Country" lazy="false">
        <id name="id">
            <generator class="native">
                <param name="sequence">T_COUNTRY_SEQ</param>
            </generator>
        </id>
        <property name="name"/>

        <set name="personSet" table="T_PERSON"
             inverse="true" lazy="false" fetch="select">
            <key column="F_COUNTRY" not-null="true"/>
            <one-to-many class="by.minsler.hibernate.bean.Passport"/>
        </set>

    </class>
</hibernate-mapping>