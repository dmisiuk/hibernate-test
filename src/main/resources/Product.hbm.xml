<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.minsler.hibernate.bean.Product" lazy="false">

        <id name="id" column="F_ID" access="property">
            <generator class="uuid">
            </generator>
        </id>

        <property name="name" type="string" access="property"/>
        <property name="length" access="property"/>
        <property name="width" access="property"/>
        <property name="height" access="property"/>
        <property name="volume" formula="F_WIDTH * F_LENGTH * F_HEIGHT" access="property"/>
        <property name="internalId" access="property" not-null="true"/>

        <joined-subclass name="by.minsler.hibernate.bean.Book">
            <key column="F_ID"/>
            <property name="pages" access="property"/>
        </joined-subclass>
        <joined-subclass name="by.minsler.hibernate.bean.Pen">
            <key column="F_ID"/>
            <property name="color" access="property"/>
        </joined-subclass>

    </class>
</hibernate-mapping>