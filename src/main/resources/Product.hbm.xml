<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.minsler.hibernate.bean.Product" lazy="false">

        <id name="id" column="F_ID" access="property">
            <generator class="uuid">
            </generator>
        </id>

        <property name="name" type="string" access="property"/>
        <property name="length" access="property"/>
        <property name="width" access="property"/>
        <property name="height" access="property"/>

    </class>
</hibernate-mapping>